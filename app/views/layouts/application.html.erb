<!DOCTYPE html>
<html>
  <head>
    <title>SampleApp</title>

      <%= csrf_meta_tags %>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
      <link href='https://fonts.googleapis.com/css?family=ABeeZee' rel='stylesheet'>
      <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
  </head>
  <body class="Site">

    <!-- ****************************************************** -->
    <!-- NavBar Section -->

    <!-- Start of NavBar -->
    <nav class="navbar navbar-default navbar-fixed-top">

      <!-- Start of container -->
      <div class="container">

        <!-- Start of Hamburger -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div><!-- End of Hamburger -->

        <!-- Start of navbar-collapse -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <!-- Start of NavBar left -->
          <ul class="nav navbar-nav">
            <li class="active"><a class="nav-link" <%= link_to 'Home', root_path %> </a></li>
          </ul><!-- End of NavBar left -->

          <!-- Start of NavBar right -->
          <ul class="nav navbar-nav navbar-right">
            <li><a class="nav-link" <%= link_to 'About', simple_pages_about_path %> </a></li>
            <li><a class="nav-link" <%= link_to 'Contact', simple_pages_contact_path %> </a></li>
          </ul><!-- End of NavBar right -->

        </div><!-- End of navbar-collapse -->

      </div><!-- End of container -->

    </nav><!-- End of NavBar -->

<!-- ****************************************************** -->
<main class="Site-content">
  <%= yield %>
</main>

